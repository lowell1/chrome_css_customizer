{
  "name": "CSS Customizer",
  "description": "Customize any web page",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "96": "images/logo.png",
      "128": "images/logo.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "96": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["css_manager.js"]
    }
  ],
  "permissions": ["storage"]
}
